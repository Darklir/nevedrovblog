<h3>Index</h3>
<% @articles.each do |article| %>
<div>
<%= article.title %>
</div>
<div>
<%= article.body %>
</div>

<%= link_to "Show", article_path(article) %>
<%= link_to "Edit", edit_article_path(article) %>
<%= link_to "Delete", article_path(article),
      							method: :delete,
      							data: { confirm: 'Are you sure?'}%> 
<% end %>
<%= link_to "New article", new_article_path %>

